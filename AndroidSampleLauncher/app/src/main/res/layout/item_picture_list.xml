<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/picturelist_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/picture_list_view"
        android:layout_width="200dp"
        android:layout_height="132.5dp"
        android:layout_marginLeft="13dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="40">

            <ImageView
                android:id="@+id/img_picture_list_background_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginTop="107.5dp"
                android:background="#B3000000">

                <TextView
                    android:id="@+id/txt_picture_list_background_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="66.8sp"
                    android:textSize="11sp" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>